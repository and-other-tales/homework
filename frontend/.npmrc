# Node.js npm configuration
# These settings help with cross-platform compatibility issues

# Allow operation with elevated permissions
unsafe-perm=true

# Avoid symlinks which can cause issues in WSL/Windows
bin-links=false

# Use legacy peer dependency resolution to avoid conflicts
legacy-peer-deps=true

# Increase timeout for operations (helpful in WSL/Windows)
fetch-timeout=300000

# More descriptive and helpful error messages
loglevel=info
